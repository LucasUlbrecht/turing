        <index-attrs>
            <srcAttr xmlName="jcr:title">
                <tag>title</tag>
            </srcAttr>
            <srcAttr xmlName="jcr:description">
                <tag>abstract</tag>
            </srcAttr>
            <srcAttr xmlName="cq:tags">
                <tag>tags</tag>
            </srcAttr>
            <srcAttr xmlName="text" className="com.viglet.turing.connector.aem.indexer.ext.TurPageComponents">
                <tag>text</tag>
            </srcAttr>
        </index-attrs>
    </mappingDefinition>
    <mappingDefinition contentType="dam:Asset" subType="content-fragment">
        <index-attrs>
            <srcAttr xmlName="jcr:title">
                <tag>title</tag>
            </srcAttr>
            <srcAttr xmlName="content" className="com.viglet.turing.connector.aem.indexer.ext.TurHTML2Text">
                <tag>abstract</tag>
            </srcAttr>
            <srcAttr xmlName="area">
                <tag>area</tag>
            </srcAttr>
            <srcAttr xmlName="group">
                <tag>group</tag>
            </srcAttr>
            <srcAttr xmlName="theme">
                <tag>theme</tag>
            </srcAttr>
            <srcAttr xmlName="subtitle">
                <tag>subtitle</tag>
            </srcAttr>
            <srcAttr xmlName="status">
                <tag>status</tag>
            </srcAttr>
        </index-attrs>
    </mappingDefinition>

</mappingDefinitions>